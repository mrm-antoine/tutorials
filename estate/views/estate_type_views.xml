<?xml version="1.0"?>
<odoo>
    <record id="estate_type_model_action" model="ir.actions.act_window">
        <field name="name">Estate type properties</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_estate_type_tree" model="ir.ui.view">
        <field name="name">estate.property.type.tree</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="offer_count"/>
            </tree>
        </field>
    </record>

    <record id="view_estate_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form>
                <div class="oe_button_box" name="button_box">
                    <button class="oe_stat_button" type="action" name="%(estate_offer_model_action)d" align="left" icon="fa-list" string="TOTO">
                        <field name="offer_count" string="Offers" widget="statinfo"></field>
                    </button>
                </div>
                <field name="name"/>
                <notebook>
                    <page string="Properties">
                        <field name="property_ids">
                            <tree>
                                <field name="name"/>
                                <field name="expected_price"/>
                                <field name="state"/>

                            </tree>
                        </field>
                    </page>
                </notebook>
            </form>
        </field>
        
    </record>
</odoo>